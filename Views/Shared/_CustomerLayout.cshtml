<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Library Manage</title>
    <!-- Latest compiled and minified CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <!-- Header -->
    <header class="bg-primary text-white text-center py-3">
        <h1>Library Management</h1>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <!-- "me-auto" để căn trái -->
                        <li class="nav-item">
                            <a asp-action="LibraryItem" asp-controller="LibraryItem" class="nav-link fs-4">Sản phẩm</a> <!-- fs-4 để tăng kích thước -->
                        </li>
                        <li class="nav-item">
                            <a asp-action="AllBorrower" asp-controller="Borrower" class="nav-link fs-4">Tài khoản</a> <!-- fs-4 để tăng kích thước -->
                        </li>
                        <li class="nav-item">
                            <a asp-action="AllHistory" asp-controller="BorrowHistory" class="nav-link fs-4">Lịch sử mượn</a> <!-- fs-4 để tăng kích thước -->
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Body (Render body) -->
    <main class="container my-4">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-white text-center py-3">
        <p>&copy; 2024 Library Management. All Rights Reserved.</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+00LRn5qE6E7mf4fCOmCZlrD3zF86" crossorigin="anonymous"></script>
</body>
</html>